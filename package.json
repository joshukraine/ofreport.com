{
  "name": "ofreport.com",
  "version": "2.0.0",
  "description": "Our family blog, documenting our work in Ukraine",
  "author": "Joshua Steele",
  "private": true,
  "scripts": {
    "dev": "yarn md2json && nuxt",
    "build": "yarn md2json && nuxt build",
    "md2json": "m2j -w 0 content/articles/*.md -o data/articles.json",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js,.vue --fix --ignore-path .gitignore ."
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.js": "eslint --fix",
    "*.css": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "cloudinary-vue": "latest",
    "frontmatter-markdown-loader": "^2.3.0",
    "glob": "^7.1.4",
    "markdown-to-json": "^0.5.1",
    "nuxt": "^2.0.0",
    "vuejs-paginate": "^2.1.0"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^1.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.0",
    "stylelint": "^11.1.1",
    "stylelint-order": "^3.1.1"
  }
}
