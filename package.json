{
  "name": "ofreport.com",
  "version": "2.0.0",
  "description": "Our family blog, documenting our work in Ukraine",
  "author": "Joshua Steele",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "yarn md2json && nuxt",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue . && stylelint \"**/*.(css|vue)\"",
    "lint:fix": "eslint --ext .js,.vue --fix . && stylelint --fix \"**/*.(css|vue)\"",
    "md2json": "m2j -w 0 content/articles/*.md -o data/articles.json",
    "start": "nuxt start"
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.12.1",
    "@nuxtjs/feed": "^1.1.0",
    "@nuxtjs/recaptcha": "^0.6.1",
    "@nuxtjs/robots": "^2.4.2",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/toast": "^3.3.1",
    "cloudinary-vue": "^1.1.1",
    "concurrent-transform": "^1.0.0",
    "current-script-polyfill": "^1.0.0",
    "dayjs": "^1.8.32",
    "frontmatter-markdown-loader": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-awspublish": "^4.1.2",
    "gulp-cloudfront-invalidate-aws-publish": "^1.0.0",
    "lodash.countby": "^4.6.0",
    "markdown-it": "^10.0.0",
    "markdown-it-link-attributes": "^3.0.0",
    "markdown-to-json": "^0.5.1",
    "nuxt": "^2.0.0",
    "vuejs-paginate": "^2.1.0",
    "vuelidate": "^0.7.4"
  },
  "devDependencies": {
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/tailwindcss": "^2.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-order": "^4.0.0"
  }
}
